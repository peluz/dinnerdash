<h1>Your Cart</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Subtotal</th>
    <th>Remove from Cart</th>
  </tr>
 
  <%@items.each do |item| %>
    <tr>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
      <td><%= item[0].price * item[1] %></td> 
      <td><%= link_to 'Remover do Carrinho', destroy_cart_path(item[0].id) %></td> 
      <td><%= link_to "+", add_cart_path(item[0].id), class:'btn btn-default'%></td>
      <td><%= link_to "-", minus_cart_path(item[0].id), class:'btn btn-default'%></td>
    </tr>
  <% end%>
</table>

<p><%= link_to "Todas as opções", {controller: 'items'}, class:'btn btn-default'%></p>