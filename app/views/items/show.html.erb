<div class="container-fluid">
  <div class="row">
    <h1>Detalhes do item</h1>
  </div>
</div>

<div class="table-responsive">
	<table class="table">
		<thead>
			<th>Nome</th>
			<th>Descrição</th>
			<th>Preço</th>
		</thead>                                 
		<tbody>
			<tr>
				<td><%= @item.title %></td>
				<td><%= @item.description %></td>
				<td>$ <%= print_price(@item.price) %></td>
			</tr>
		</tbody>	
	</table>
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<% if @item.hidden %>
					<div class="removed">Removido do menu!</div>
				<% end %>
			</div>
		</div>
	</div>
	<% if admin? %>
		<%=link_to "Editar item", edit_item_path(@item), class:'btn btn-warning' %>
		<% @categories.each do |category| %>
			<%=link_to "Associar a #{category.title}", add_category_path(@item.id, category.id), class:'btn btn-success' %>   
		<% end %>
	<% end %>
</div>

